{
  "name": "@touchlab/linear-mcp-integration",
  "version": "0.1.2",
  "description": "MCP server providing tools to interact with the Linear API (Issues, Projects, Teams).",
  "main": "build/index.js",
  "bin": "build/index.js",
  "type": "module",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testMatch '**/*.integration.test.ts'",
    "get-test-tokens": "node --loader ts-node/esm scripts/get-test-tokens.ts",
    "test:oauth": "node --loader ts-node/esm scripts/test-oauth.ts",
    "build": "tsc && chmod +x build/index.js",
    "start": "node build/index.js",
    "dev": "nodemon --watch src --ext ts --exec \"npm run build && npm start\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/touchlab/linear-mcp-integration.git"
  },
  "keywords": [
    "linear",
    "mcp",
    "model-context-protocol",
    "typescript",
    "api",
    "integration",
    "issue tracking"
  ],
  "author": "Kevin Galligan <kgalligan@gmail.com>",
  "license": "ISC",
  "files": [
    "build/",
    "README.md",
    "LICENSE",
    ".env.example"
  ],
  "devDependencies": {
    "@types/dotenv": "^8.2.3",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.10",
    "@types/node-fetch": "^2.6.12",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "open": "^10.1.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@graphql-typed-document-node/core": "^3.2.0",
    "@linear/sdk": "^38.0.0",
    "@modelcontextprotocol/sdk": "1.10.1",
    "graphql": "^16.10.0",
    "graphql-tag": "^2.12.6",
    "zod": "^3.24.3"
  }
}
